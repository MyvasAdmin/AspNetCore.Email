<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>2.1.600</Version>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyName>Myvas.AspNetCore.Email</AssemblyName>
    <PackageId>Myvas.AspNetCore.Email</PackageId>
    <PackageTags>AspNetCore IEmailSender MailKit</PackageTags>
    <PackageProjectUrl>https://github.com/myvas/AspNetCore.Email</PackageProjectUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <RootNamespace>Myvas.AspNetCore.Email</RootNamespace>
    <Authors>Myvas</Authors>
    <Description>An AspNetCore service to send Email via MailKit. (Windows and Linux works!)</Description>
    <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <ItemGroup>
    <None Update="*.nuspec">
      <Pack>true</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.1" />
    <PackageReference Include="MailKit" Version="2.0.6" />
  </ItemGroup>

</Project>
