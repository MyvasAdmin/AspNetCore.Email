<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.2.2-alpha-70325</Version>
    <VersionPrefix>0.2.2</VersionPrefix>
    <VersionSufix>alpha-70325</VersionSufix>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyName>AspNetCore.Email</AssemblyName>
    <PackageId>AspNetCore.Email</PackageId>
    <PackageTags>AspNetCore;IEmailService</PackageTags>
    <PackageLicenseUrl>https://github.com/myvas/AspNetCore.Email/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>http://github.com/myvas/AspNetCore.Email</RepositoryUrl>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <RootNamespace>AspNetCore.Email</RootNamespace>
    <Authors>AspNetCore</Authors>
    <Description>A Middleware and a WebApi to send Email built on latest AspNetCore (It works on Windows, and Linux!)</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Update="*.nuspec">
      <Pack>true</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="1.2.0-preview1-22821" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="1.2.0-preview1-22821" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.1" />
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.3.0" />
    <PackageReference Include="MailKit" Version="1.12.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
