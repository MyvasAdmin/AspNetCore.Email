@model TemplatedEmailViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="@nameof(HomeController.SendNamedTemplatedEmail)" method="post">
    <input asp-for="Recipient" placeholder="Recipient/Email" type="text" value="4848285@qq.com" />
    <input asp-for="RecipientName" placeholder="RecipientName" type="text" value="FrankH" />
    <input asp-for="Subject" placeholder="Subject/Title" type="text" value="test" />
    <input asp-for="Template" placeholder="Template/FileName" type="text" value="named.txt" /><span>eg. named.txt or named.html</span>
    <input asp-for="IsHtml" type="checkbox" /><span>Is Html?</span>
    <input class="send-email" type="submit" value="Send Email" />
</form>

<div class="@ViewData["Result"]"></div>
